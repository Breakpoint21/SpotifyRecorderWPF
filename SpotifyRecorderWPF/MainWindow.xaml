<Window x:Class="SpotifyRecorderWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpotifyRecorderWPF"
        mc:Ignorable="d"
        Icon="icon.ico"
        Title="SpotifyRecorder" Height="350" Width="525" MinWidth="500" MinHeight="300" Closing="Window_Closing">
    <Window.DataContext>
        <local:MainViewModel />
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="110" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <ComboBox x:Name="cmbDevice" Grid.Column="1" Grid.Row="0" ItemsSource="{Binding MmDevices}" DisplayMemberPath="FriendlyName" SelectedValuePath="ID" SelectedValue="{Binding SelectedMmDeviceId}" IsReadOnly="{Binding RecordingStarted}" Margin="10,0" VerticalAlignment="Center" Width="Auto" HorizontalContentAlignment="Stretch"/>
        <Label x:Name="lblDevice" Grid.Row="0" Grid.Column="0" Content="Device" HorizontalAlignment="Left" Margin="10,0" VerticalAlignment="Center"/>
        <Label x:Name="lblBitrate" Grid.Row="1" Grid.Column="0" Content="Bitrate" HorizontalAlignment="Left" Margin="10,0" VerticalAlignment="Center"/>
        <Label x:Name="lblOutputPath" Grid.Row="2" Grid.Column="0" Content="Output Path" HorizontalAlignment="Left" Margin="10,0" VerticalAlignment="Center"/>
        <ComboBox x:Name="cmbBitrate" Grid.Column="1" Grid.Row="1" ItemsSource="{Binding Bitrates}" SelectedValue="{Binding SelectedBitrate}" IsReadOnly="{Binding RecordingStarted}" Margin="10,0,10,0" VerticalAlignment="Center" Width="Auto" HorizontalContentAlignment="Stretch"/>
        <Grid Grid.Row="2" Grid.Column="1" Width="Auto" Margin="10,0" HorizontalAlignment="Stretch">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="27" />
                </Grid.ColumnDefinitions>
                <TextBox x:Name="txtOutputPath" Grid.Column="0" HorizontalAlignment="Stretch" Height="23" Margin="0,0,10,0" TextWrapping="Wrap" VerticalContentAlignment="Center" Text="{Binding OutputFolder}" IsReadOnly="{Binding RecordingStarted}" VerticalAlignment="Center" Width="Auto"/>
                <Button x:Name="btnOutputPath" Grid.Column="1" Content="..." Command="{Binding SelectFolderCommand}" HorizontalAlignment="Right" Margin="0,0,0,0" VerticalAlignment="Center" Width="27"/>
        </Grid>
        <Label x:Name="lblSkipCommertials" Grid.Row="3" Grid.Column="0" Content="Skip commertials" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Center"/>
        <CheckBox x:Name="chkSkipCommertials" Grid.Row="3" Grid.Column="1" IsChecked="{Binding IsSkipCommertials}" Content="" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Center"/>
        <Label x:Name="lblCurrentSong" Grid.Column="0" Grid.Row="4" Content="Current Song" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Center"/>
        
        <Grid Grid.Row="4" Grid.Column="1" Margin="0,0,10,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="75" />
                <ColumnDefinition Width="85" />
            </Grid.ColumnDefinitions>
            <Button x:Name="btnStartRec" Grid.Column="1" Content="Start" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Center" Width="75" Command="{Binding StartRecordingCommand}"/>
            <Button x:Name="btnStopRec" Grid.Column="2" Content="Stop" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Center" Width="75" RenderTransformOrigin="0.493,0.431" Command="{Binding StopRecordingCommand}" IsEnabled="{Binding }"/>
            <Label x:Name="lblPlayingSong" Grid.Column="0" Content="{Binding CurrentSong}" HorizontalAlignment="Left" Margin="6,0,0,0" VerticalAlignment="Center"/>
        </Grid>
        <ListBox x:Name="listRecordedFiles" Grid.Column="0" Grid.Row="5" Grid.ColumnSpan="2" HorizontalAlignment="Stretch" Height="Auto" Margin="10,10" VerticalAlignment="Stretch" Width="Auto" ItemsSource="{Binding RecordedFiles}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <TextBlock Text="{Binding Song}"></TextBlock>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        

    </Grid>
</Window>
